.wux-tabbar {
  position: relative;
  z-index: 500;
  width: 100%;
  min-height: 92rpx;
  background-color: #fff;
  box-sizing: border-box
}
.wux-tabbar--bottom {
  position: fixed;
  left: 0;
  bottom: 0
}
.wux-tabbar--bottom:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1PX;
  border-top: 1PX solid #d9d9d9;
  color: #d9d9d9;
  transform-origin: 0 0;
  transform: scaleY(.5)
}
.wux-tabbar--top {
  position: fixed;
  left: 0;
  top: 0
}
.wux-tabbar--top:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1PX;
  border-bottom: 1PX solid #d9d9d9;
  color: #d9d9d9;
  transform-origin: 0 100%;
  transform: scaleY(.5)
}