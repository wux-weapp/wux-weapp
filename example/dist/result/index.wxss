.wux-result {
  padding-top: 0;
  text-align: center
}
.wux-result__bd {
  padding: 60rpx 40rpx
}
.wux-result__icon {
  padding-top: 72rpx;
  text-align: center
}
.wux-result__title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 40rpx
}
.wux-result__desc {
  font-size: 28rpx;
  color: grey
}
.wux-result__buttons {
  margin-top: 60rpx
}
.wux-result__ft {
  font-size: 28rpx;
  color: grey
}
.wux-result--fixed .wux-result__ft {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 30rpx;
  text-align: center;
  box-sizing: border-box
}